              "mode": "raw",
              "raw": "{\n  \"0\": {\n    \"json\": {\n      \"churchId\": {{church_id}},\n      \"name\": \"홍길동\",\n      \"email\": \"hong@example.com\",\n      \"phone\": \"010-1234-5678\",\n      \"address\": \"서울시 강남구\",\n      \"birthDate\": \"1990-01-01\",\n      \"membershipDate\": \"2024-01-01\",\n      \"status\": \"ACTIVE\",\n      \"membershipType\": \"REGULAR\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{api_url}}/members.create",
              "host": ["{{api_url}}"],
              "path": ["members.create"]
            }
          }
        },
        {
          "name": "Update Member",
