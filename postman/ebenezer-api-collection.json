{
  "info": {
    "name": "Ebenezer Church Management API",
    "description": "Complete API testing collection for Ebenezer Church Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "api_url",
      "value": "{{base_url}}/api/trpc"
    },
    {
      "key": "jwt_token",
      "value": ""
    },
    {
      "key": "church_id",
      "value": "1"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@gcchurch.kr\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/signin",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "signin"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const responseJson = pm.response.json();",
                  "    if (responseJson.token) {",
                  "        pm.collectionVariables.set('jwt_token', responseJson.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Session",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/auth/session",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "session"]
            }
          }
        }
      ]
    },
    {
      "name": "Members",
      "item": [
        {
          "name": "Get All Members",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_url}}/members.getAll?batch=1&input={\"0\":{\"json\":{\"churchId\":{{church_id}}}}}",
              "host": ["{{api_url}}"],
              "path": ["members.getAll"],
              "query": [
                {
                  "key": "batch",
                  "value": "1"
                },
                {
                  "key": "input",
                  "value": "{\"0\":{\"json\":{\"churchId\":{{church_id}}}}}"
                }
              ]
            }
          }
        },
        {
          "name": "Create Member",
