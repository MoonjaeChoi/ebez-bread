              "raw": "{\n  \"0\": {\n    \"json\": {\n      \"id\": 1,\n      \"churchId\": {{church_id}},\n      \"name\": \"홍길동 (수정됨)\",\n      \"email\": \"hong.updated@example.com\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{api_url}}/members.update",
              "host": ["{{api_url}}"],
              "path": ["members.update"]
            }
          }
        }
      ]
    },
