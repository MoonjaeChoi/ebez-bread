  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-set base_url for different environments",
          "if (pm.environment.get('environment') === 'production') {",
          "    pm.collectionVariables.set('base_url', 'https://your-production-domain.com');",
          "} else if (pm.environment.get('environment') === 'staging') {",
          "    pm.collectionVariables.set('base_url', 'https://your-staging-domain.com');",
          "} else {",
          "    pm.collectionVariables.set('base_url', 'http://localhost:3000');",
          "}",
          "",
          "pm.collectionVariables.set('api_url', pm.collectionVariables.get('base_url') + '/api/trpc');"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global response time test",
          "pm.test('Response time is less than 5000ms', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "// Global status code test",
          "pm.test('Status code is 200 or 201', function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
          "});"
        ]
      }
    }
  ]
}